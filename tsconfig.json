{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "lib": ["ES6", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "src/server/webpack.config.ts"],
  "exclude": ["node_modules", "dist"]
}
